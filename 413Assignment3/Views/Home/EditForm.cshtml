@{
}
@model Movie

<div>
    <h2 style="text-align:center">Movie Editing</h2>
    <form method="post" asp-action="MovieUpdate" class="col-lg-6 offset-lg-3 ">
        <div class="justify-content-center">
            <div>
                <label asp-for="Category">Category:</label>
                <input asp-for="Category" required value="@Model.Category" />
            </div>
            <div>
                <label asp-for="Title">Title:</label>
                <input asp-for="Title" required value="@Model.Title" />
            </div>
            <div>
                <label asp-for="Year">Year:</label>
                <input asp-for="Year" required value="@Model.Year" />
            </div>
            <div>
                <label asp-for="Director">Director:</label>
                <input asp-for="Director" required value="@Model.Director" />
            </div>
            <div>
                <label asp-for="Rating">Rating:</label>
                <select asp-for="Rating" required value="@Model.Rating">
                    <option value="">Select One</option>
                    <option value="G">G</option>
                    <option value="PG">PG</option>
                    <option value="PG-13">PG-13</option>
                    <option value="R">R</option>
                </select>
            </div>
            <div>
                <label asp-for="Edited">Edited?</label>
                <select asp-for="Edited" value="@Model.Edited">
                    <option value="false">No</option>
                    <option value="true">Yes</option>
                </select>
            </div>
            <div>
                <label asp-for="LentTo">Lent To?</label>
                <input asp-for="LentTo" value="@Model.LentTo" />
            </div>
            <div>
                <label asp-for="Notes">Notes:</label>
                <input asp-for="Notes" value="@Model.Notes" />
            </div>
            <input hidden asp-for="MovieId" value="@Model.MovieId" />

            <button type="submit">Save Edits</button>
            <div asp-validation-summary="All"></div>
        </div>
    </form>
</div>
